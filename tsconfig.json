{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "sourceMap": true
  },
  "files": ["./hardhat.config.ts"],
  "include": ["src/**/*.ts", "typechain-types/**/*.ts", "test/**/*.ts"]
}
